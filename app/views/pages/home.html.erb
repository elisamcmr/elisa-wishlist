<div class="banner mb-4" style="height: 400px; background-image: url('<%= asset_path("wishlist_banner.jpeg") %>'); background-size: cover; background-position: center; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
  <% if current_user&.admin? %>
    <h1>Welcome to Your Wishlist</h1>
  <% else %>
    <h1>Welcome to Elisa's Wishlist</h1>
  <% end %>
</div>

<div class="row mt-4 mx-2 justify-content-center">
    <div class="col-md-6 col-lg-6 mb-4">
        <%= link_to lists_path, style: "text-decoration: none; color: inherit;" do %>
        <div class="card shadow-sm" style="height: 300px; border: none; border-radius: 15px; overflow: hidden;">
          <div style="height: 100%; background-image: url('<%= asset_path("list.jpeg") %>'); background-size: cover; background-position: center; position: relative;">
            <div class="card-body text-white d-flex align-items-center justify-content-center" style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; left: 0; width: 100%; height: 100%; border-radius: 15px;">
              <h3 class="card-title mb-0">Lists</h3>
            </div>
            </div>
          </div>
        <% end %>
    </div>
    <div class="col-md-6 col-lg-6 mb-4">
        <%= link_to websites_path, style: "text-decoration: none; color: inherit;" do %>
        <div class="card shadow-sm" style="height: 300px; border: none; border-radius: 15px; overflow: hidden;">
          <div style="height: 100%; background-image: url('<%= asset_path("get_inspired.jpeg") %>'); background-size: cover; background-position: center; position: relative;">
            <div class="card-body text-white d-flex align-items-center justify-content-center" style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; left: 0; width: 100%; height: 100%; border-radius: 15px;">
              <h3 class="card-title mb-0">Get Inspired</h3>
            </div>
          </div>
        </div>
        <% end %>
    </div>
</div>
