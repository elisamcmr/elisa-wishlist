<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mb-4">Add a new website</h1>

      <%= simple_form_for @website do |f| %>
        <%= f.input :name %>
        <%= f.input :url %>
        <%= f.input :category,
                    collection: Website.distinct.pluck(:category),
                    prompt: "Choose a category or type a new one" %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div> 
