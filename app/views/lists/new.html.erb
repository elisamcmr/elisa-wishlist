<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mb-4">Create a new list</h1>

      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div> 
